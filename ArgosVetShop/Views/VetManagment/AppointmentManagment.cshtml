                                    </div>
                                    <div class="col s6 m6 l6 center">
                                        <span class="bold right"></span>
                                    </div>
                                </div>
                                <div class="collapsible-body">
                                    <div class="row center">
                                        <h4>No Information available</h4>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts{
    <script>
        if ('@ViewBag.Success') {
            Materialize.toast('@ViewBag.Success', 3000, 'success')
        } if ('@ViewBag.Failed') {
            Materialize.toast('@ViewBag.Failed', 3000, 'danger')
        }
        $(function () {
            $('select').change(function () {
                var value = parseInt($(this).val());
                switch (value) {
                    case 1:
                        var selector = $('#today');
                        if (selector.hasClass('hidden')) {
                            selector.removeClass('hidden');
                        }
                        if (!$('#past').hasClass('hidden')) {
                            $('#past').addClass('hidden');
                        }
                        if (!$('#future').hasClass('hidden')) {
                            $('#future').addClass('hidden');
                        }
                        break;
                    case 2:
                        var selector = $('#future');
                        if (selector.hasClass('hidden')) {
                            selector.removeClass('hidden');
                        }
                        if (!$('#past').hasClass('hidden')) {
                            $('#past').addClass('hidden');
                        }
                        if (!$('#today').hasClass('hidden')) {
                            $('#today').addClass('hidden');
                        }
                        break;
                    case 3:
                        var selector = $('#past');
                        if (selector.hasClass('hidden')) {
                            selector.removeClass('hidden');
                        }
                        if (!$('#today').hasClass('hidden')) {
                            $('#today').addClass('hidden');
                        }
                        if (!$('#future').hasClass('hidden')) {
                            $('#future').addClass('hidden');
                        }
                        break;
                    default:

                }
            });
        });
    </script>
}
